<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeekBarRedLight" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorControlActivated">#dd1313</item>
        <item name="android:colorControlNormal">#e84a4a</item>
    </style>

    <style name="SeekBarBlueLight" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorControlActivated">#1a237e</item>
        <item name="android:colorControlNormal">#00b0ff</item>
    </style>


    <style name="SeekBarGreenLight" parent="Widget.AppCompat.SeekBar">
        <item name="android:colorControlActivated">#02ce2a</item>
        <item name="android:colorControlNormal">#72d886</item>
    </style>


</resources>
